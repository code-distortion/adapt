; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_size = 2

[*.{json,json.dist}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{neon,neon.dist}]
indent_size = 2

[*.{xml,xml.dist}]
indent_size = 2

[*.{yml,yml.dist}]
indent_size = 2
